var games = 0;
var score = 0;

func start_game() {
	games = games + 1;
	print "Please Enter Your Name";
	if (read() == "anis") {
		print "Welcome Anis!";
		return 1;
	}
	print "I don't know you!";
	return 0;
}

for (;;) {
	score = score + start_game();
	print "Do you want to resume the game? (yes/no)";
	// TODO: break does not work here
	if (read() != "yes") break;
}

print "Total Games Played:", games;
print "Score:", score;
